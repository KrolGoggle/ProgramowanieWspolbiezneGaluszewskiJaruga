<Window x:Class="ViewLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewLayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="ADD" HorizontalAlignment="Left" Height="68" Margin="47,341,0,0" VerticalAlignment="Top" Width="155" Click="Button_Click"/>
        <Button Content="DELETE" HorizontalAlignment="Left" Height="68" Margin="224,341,0,0" VerticalAlignment="Top" Width="156"/>
        <Button Content="START" HorizontalAlignment="Left" Height="68" Margin="409,341,0,0" VerticalAlignment="Top" Width="155"/>
        <Button Content="STOP" HorizontalAlignment="Left" Height="68" Margin="602,341,0,0" VerticalAlignment="Top" Width="155"/>


        <Rectangle Width="{Binding width}" Height="{Binding height}" Fill="WhiteSmoke" Margin="160,35,160,149" StrokeThickness="2" Stroke="black"/>

    </Grid>
</Window>
